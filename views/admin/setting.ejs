                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-5">Betting Info</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#tab-6">Feedback Info</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-9 mt-4 mt-lg-0">
                <div class="tab-content">
                    <div class="tab-pane show active" id="tab-1">
                        <div class="row">
                            <div class="col-lg-12 details order-2 order-lg-1">
                                <h3>User Information</h3>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-2">
                        <div class="row">
                            <div class="col-lg-12 details order-2 order-lg-1">
                                <h3>Live Stream URL:</h3>
                                <div class="row">
                                    <input id="stream_url" value="" type="text" class="col-md-8 form-control" placeholder="Stream URL">
                                    <button type="button" class="col-md-2 form-control" id="view_stream">View</button>
                                    <button type="button" class="col-md-2 form-control" id="save_url">Save</button>
                                </div>
                                <div class="row">
                                    <iframe id="stream_preview" src="" width="100%" height="100%" frameborder="0" scrolling="no" allow="autoplay" allowfullscreen webkitallowfullscreen mozallowfullscreen oallowfullscreen msallowfullscreen>
                                    </iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-3">
                        <div class="row">
                            <div class="col-lg-12 details order-2 order-lg-1">
                                <form method="post" action="/settings/cur_race_info/save">
                                    <h3>Current Race Information</h3>
                                    <table class="w-full table-auto bg-white">
                                        <thead>
                                            <tr>
                                                <th class="border px-4 py-2 text-left">No</th>
                                                <th class="border px-4 py-2 text-left">Name</th>
                                                <th class="border px-4 py-2 text-left">SP</th>
                                            </tr>
                                        </thead>
                                        <tbody id="cur_race_info_table">
                                            <% for(var i=0; i<race_info.length; i++) { %>
                                                <tr>
                                                    <td class="border px-4 py-2 row_num">
                                                        <%= i %>
                                                    </td>
                                                    <td class="border px-4 py-2">
                                                        <input name="name" type="text" val="<%= race_info[i].name %>" placeholder="Name"/>
                                                    </td>
                                                    <td class="border px-4 py-2">
                                                        <input name="sp" type="text" val="<%= race_info[i].sp %>" placeholder="SP"/>
                                                    </td>
                                                    <td class="border px-4 py-2">
                                                        <button type="delete" class="Cur-Race-Delete">Delete</button>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                    <div class="row">
                                        <button class="col-md-offset-6 col-md-3" id="cur_race_info_add">Add</button>
                                        <button class="col-md-offset-6 col-md-3" type="submit">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
